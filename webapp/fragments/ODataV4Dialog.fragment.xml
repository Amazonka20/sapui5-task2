<core:FragmentDefinition
  xmlns:m="sap.m"
  xmlns:core="sap.ui.core"
  xmlns="sap.ui.layout.form">
  <m:Dialog 
        id="dialogV4" 
        title="{i18n>dialogTitleAddRecord}" 
        class="sapUiContentPadding">
    <content>
        <Form>
            <layout>
                <ResponsiveGridLayout/>
            </layout>    
        <formContainers>
            <FormContainer>
            <formElements>

                <FormElement>
                <label>
                    <m:Label text="Name" required="true"/>
                </label>
                <fields>
                    <m:Input id="inpNameV4" value="{oDataV4>Name}"/>
                </fields>
                </FormElement>

                <FormElement>
                <label>
                    <m:Label text="Description" required="true"/>
                </label>
                <fields>
                    <m:Input id="inpDescriptionV4" value="{oDataV4>Description}"/>
                </fields>
                </FormElement>

                <FormElement>
                <label>
                    <m:Label text="ReleaseDate" required="true"/>
                </label>
                <fields>
                    <m:DatePicker 
                    id="dpReleaseDateV4"  
                    dateValue="{oDataV4>ReleaseDate}"/>
                </fields>
                </FormElement>

                <FormElement>
                <label>
                    <m:Label text="DiscontinuedDate"/>
                </label>
                <fields>
                    <m:DatePicker id="dpDiscontinuedDateV4" dateValue="{oDataV4>DiscontinuedDate}"/>
                </fields>
                </FormElement>

                <FormElement>
                <label>
                    <m:Label text="Rating" required="true"/>
                </label>
                <fields>
                    <m:Input 
                        id="inpRatingV4" 
                        type="Number"  
                        value="{
                                path: 'oDataV4>Rating',
                                type: 'sap.ui.model.type.Integer'
                            }"/>
                </fields>
                </FormElement>

                <FormElement>
                <label>
                    <m:Label text="Price" required="true"/>
                </label>
                <fields>
                    <m:Input id="inpPriceV4" 
                            type="Number"                 
                            value="{
                                path: 'oDataV4>Price', 
                                type: 'sap.ui.model.type.Float'}" />
                </fields>
                </FormElement>

            </formElements>
            </FormContainer>
        </formContainers>
        </Form>
    </content>
    <beginButton>
      <m:Button text="{i18n>btnSave}" type="Emphasized" press="onSaveDialog"/>
    </beginButton>
    <endButton>
      <m:Button text="{i18n>btnClose}" press="onCloseDialog"/>
    </endButton>
  </m:Dialog>
</core:FragmentDefinition>
