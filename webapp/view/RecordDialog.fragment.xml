<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog id="recordDialog" title="{i18n>dialogTitleAddRecord}" class="sapUiContentPadding">
    <content>
      <VBox width="100%">

        <Label text="{i18n>labelName}" required="true"/>
        <Input id="inpRecordName" value="{record>/Name}" />

        <Label text="{i18n>labelDescription}" class="sapUiSmallMarginTop" required="true"/>
        <TextArea
                id="inpRecordDescription"
                value="{record>/Description}"
                rows="4"
                width="100%"
                />
        <Label text="{i18n>labelReleaseDate}" class="sapUiSmallMarginTop" required="true"/>
        <DatePicker id="dpRecordReleaseDate" dateValue="{record>/ReleaseDate}" />

        <Label text="{i18n>labelDiscontinuedDate}" class="sapUiSmallMarginTop" required="true"/>
        <DatePicker id="dpRecordDiscontinuedDate" dateValue="{record>/DiscontinuedDate}" />

        <Label text="{i18n>labelRating}" class="sapUiSmallMarginTop" required="true"/>
        <Input id="inpRecordRating" type="Number" value="{record>/Rating}" />

        <Label text="{i18n>labelPrice}" class="sapUiSmallMarginTop" required="true"/>
        <Input 
                id="inpRecordPrice" 
                type="Number" 
                value="{
                        path: 'record>/Price', 
                        type: 'sap.ui.model.type.Float'}" />
      </VBox>
    </content>
    <beginButton>
      <Button text="{i18n>btnSave}" type="Emphasized" press="onSaveDialog"/>
    </beginButton>
    <endButton>
      <Button text="{i18n>btnClose}" press="onCloseDialog"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
