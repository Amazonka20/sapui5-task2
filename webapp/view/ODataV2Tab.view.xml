<mvc:View controllerName="project2.controller.ODataV2Tab"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
        <Title text="OData V2 Model" level="H3"/>
        <Table 
        id="booksTableV2"
        mode="MultiSelect" 
        selectionChange="onSelectionChange"
        items="{oDataV2>/Products}">
        <headerToolbar>
        <Toolbar>
           <Button text="{i18n>btnDelete}" press="onDelete" enabled="{view>/canDelete}" type="Reject"/>
        </Toolbar>
        </headerToolbar>
        <columns>
            <Column><Text text="Name"/></Column>
            <Column><Text text="Description"/></Column>
            <Column><Text text="ReleaseDate"/></Column>
            <Column><Text text="DiscontinuedDate"/></Column>
            <Column><Text text="Rating"/></Column>
            <Column><Text text="Price"/></Column>
        </columns>
        <items>
            <ColumnListItem>
            <cells>
                <Text text="{oDataV2>Name}"/>
                <Text text="{oDataV2>Description}"/>
                <Text text="{
                            path: 'oDataV2>ReleaseDate',
                            type: 'sap.ui.model.odata.type.DateTime'
                            }"/>
                <Text text="{
                            path: 'oDataV2>DiscontinuedDate',
                            type: 'sap.ui.model.odata.type.DateTime'
                            }"/>
                <Text text="{oDataV2>Rating}"/>
                <ObjectNumber number="{oDataV2>Price}"/>
            </cells>
            </ColumnListItem>
        </items>
        </Table>
</mvc:View>
