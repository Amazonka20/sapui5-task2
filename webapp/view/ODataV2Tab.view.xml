<mvc:View controllerName="project2.controller.ODataV2Tab"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
        <Title text="OData V2 Model" level="H3"/>
        <Table 
        id="booksTableV2"
        mode="MultiSelect" 
        selectionChange="onSelectionChange"
        items="{oDataV2>/Products}">
        <headerToolbar>
        <Toolbar>
           <Button text="{i18n>btnAdd}" press="onOpenAddDialog"  />
           <Button text="{i18n>btnDelete}" press="onDelete" enabled="{view>/canDelete}" type="Reject"/>
           <ToolbarSpacer/>
           <Input 
                    placeholder="{i18n>filterLabel}" 
                    value="{view>/sFilter}" 
                    valueLiveUpdate="true" 
                    liveChange="onFilterLiveChange" 
                    width="40%"/>
        </Toolbar>
        </headerToolbar>
        <columns>
            <Column><Text text="{i18n>colName}"/></Column>
            <Column><Text text="{i18n>colDescription}"/></Column>
            <Column><Text text="{i18n>colReleaseDate}"/></Column>
            <Column><Text text="{i18n>colDiscontinuedDate}"/></Column>
            <Column><Text text="{i18n>colRating}"/></Column>
            <Column><Text text="{i18n>colPrice}"/></Column>
            <Column><Text text="{i18n>colActions}"/></Column>
        </columns>
        <items>
            <ColumnListItem>
            <cells>
                <Text text="{oDataV2>Name}"/>
                <Text text="{oDataV2>Description}"/>
                <Text text="{
                            path: 'oDataV2>ReleaseDate',
                            type: 'sap.ui.model.odata.type.DateTime'
                            }"/>
                <Text text="{
                            path: 'oDataV2>DiscontinuedDate',
                            type: 'sap.ui.model.odata.type.DateTime'
                            }"/>
                <Text text="{oDataV2>Rating}"/>
                <ObjectNumber number="{oDataV2>Price}"/>
                <Button text="{i18n>btnEdit}" press="onEdit" type="Transparent"/>
            </cells>
            </ColumnListItem>
        </items>
        </Table>
</mvc:View>
